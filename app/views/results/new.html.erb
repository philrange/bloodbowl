<h1>New Result</h1>

<% league = League.find(params[:league_id]) %></p>
<p>Adding result in league <%= link_to league.name, league_path(league.id) %></p>

<%= simple_form_for league.results.new, url: league_results_path do |f| %>
  <p>
    <%= date_select :result, :match_date %>
  </p>  
  <p>
    <%= f.input :home_team_id, collection: teams(league), :label_method => :name, :value_method => :id, selected: 1 %>
    <%= f.input :home_team_score %>
  </p>  
  <p>
    <%= f.input :away_team_id, collection: teams(league), :label_method => :name, :value_method => :id, selected: 2 %>
    <%= f.input :away_team_score %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>